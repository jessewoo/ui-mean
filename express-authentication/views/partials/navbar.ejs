<div class="modal fade" id="myPDBLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content text-center">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">MyPDB Login</h4>
			</div>
			<div class="modal-body">
				<form action="/login" method="post">
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email">
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password" />
					</div>
					<button type="submit" class="btn btn-primary" value='Login' name='method'>Submit</button>
					<a href="/auth/google" class="btn btn-danger">Sign up thru <span class="fa fa-google-plus"></span></a>
				</form>
				<p>Don't have an account?<a href="/signup"> Signup</a></p>
			</div>
		</div>
	</div>
</div>
