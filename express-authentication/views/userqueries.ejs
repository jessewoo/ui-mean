<!DOCTYPE html>
<html>
  <% include partials/head.ejs %>
  <body>
  <% include partials/navbar.ejs %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <br/><br/><br/>
        <div>
          <h2>User Queries</h2>
          <pre><%= user %></pre>
          <br>
          <pre id="user_email"><%= user_email %></pre>

          <form id="submitForSearchResults" method=post action="http://jwdev.rcsb.org/pdb/software/webservices/rest_two.jsp">
            <div class="form-group">
              <input id="xml_text_value" class="form-control" name="xml_text" placeholder="This XML Will be Used to Retrieve Search Results">
            </div>
            <div class="form-group">
              <label for="preferred_email_value">Preferred Email Address</label>
              <input id="preferred_email_value" class="form-control" name="preferred_email" placeholder="Preferred Email">
            </div>
            <div class="well well-sm">
              Mongo Id for User Query Collection: <span id="mongoIdForCollection"></span>
            </div>
            <table id="savedUserQueries" class="table table-bordered center">
              <thead>
              <tr>
                <th>Next Scheduled Run</th>
                <th>Email Notification</th>
                <th>Query Description</th>
                <th>Query XML</th>
                <th>Run Email</th>
              </tr>
              </thead>
              <tbody>
              <!-- INSERT Table -->
              </tbody>
            </table>

          </form>

          <button class="btn-primary btn" id="viewUserQueries">View User Queries</button>
          <button class="btn-info btn" id="saveUserQueries">Save User Queries</button>
        </div>
      </div>
    </div>
    <br><br><br><br><br>
  </div>
  </body>

</html>